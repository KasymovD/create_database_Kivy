MDFloatLayout:
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 10

        Label:
            id: word_label
            text_size: self.size
            halign: "center"
            valign: "middle"
            text: "Enter A Name"
            font_size: 32

        TextInput:
            id:word_input
            multiline: False
            size_hint: (1, .5)

        Button:
            size_hint: (1, .5)
            font_size: 25
            text: "Submit Name"
            on_press:
                app.submit()

        Button:
            size_hint: (1, .5)
            font_size: 32
            text: "Show Name"
            on_press:
                app.show_record()